<h2>Similar Movies</h2>

<%#  Part 2: Start here... %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
  <tr>
    <th>Movie Title</th>
    <th>Rating</th>
    <th>Release Date</th>

  </tr>
  </thead>
  <tbody>
  <% @similar_movies.each do |movie| %>
    <tr>
      <td>
        <%= movie.title %>
      </td>
      <td>
        <%= movie.rating %>
      </td>
      <td>
        <%= movie.release_date %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

